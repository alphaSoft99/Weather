<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:background="@color/colorPrimary"
        />

    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/card"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="8dp"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_height="wrap_content"
                >
                <TextView
                    style="@style/DefaultTextView"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/tv_title"
                    android:textSize="18sp"
                    android:layout_marginEnd="16dp"
                    android:textColor="@color/colorPrimary"
                    tools:text="@string/use_info"
                    android:fontFamily="@font/montserrat_medium"
                    />
                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/photoPager"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_title"
                    app:layout_constraintDimensionRatio="1.8:1"
                    />

                <com.rd.PageIndicatorView
                    android:id="@+id/indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="@id/photoPager"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:piv_animationType="scale"
                    tools:piv_count="3"
                    app:piv_count="1"
                    app:piv_dynamicCount="true"
                    app:piv_interactiveAnimation="true"
                    app:piv_selectedColor="@color/colorPrimaryDark"
                    app:piv_unselectedColor="@color/colorPrimary"
                    tools:piv_padding="8dp"
                    tools:piv_radius="4dp" />

                <WebView
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/photoPager"
                    android:id="@+id/tv_subtitle"
                    tools:ignore="WebViewLayout" />
                <ImageView
                    app:layout_constraintTop_toBottomOf="@id/tv_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:id="@+id/iv_date"
                    app:layout_constraintStart_toStartOf="parent"
                    android:src="@drawable/ic_baseline_calendar_today_24"
                    />
                <TextView
                    style="@style/DefaultTextView"
                    app:layout_constraintBottom_toBottomOf="@id/iv_date"
                    app:layout_constraintStart_toEndOf="@id/iv_date"
                    android:layout_marginStart="8dp"
                    android:textSize="17sp"
                    android:id="@+id/tv_date"
                    android:textColor="@color/colorTextSubtitle"
                    android:fontFamily="@font/montserrat_medium"
                    tools:text="@tools:sample/date/ddmmyy"
                    />
                <ImageView
                    app:layout_constraintBottom_toBottomOf="@id/iv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:id="@+id/iv_views"
                    app:layout_constraintStart_toEndOf="@id/tv_date"
                    android:src="@drawable/ic_baseline_remove_red_eye_24"
                    />
                <TextView
                    style="@style/DefaultTextView"
                    app:layout_constraintBottom_toBottomOf="@id/iv_date"
                    app:layout_constraintStart_toEndOf="@id/iv_views"
                    android:layout_marginStart="8dp"
                    android:textSize="17sp"
                    android:id="@+id/tv_views"
                    android:textColor="@color/colorTextSubtitle"
                    android:fontFamily="@font/montserrat_medium"
                    tools:text="@tools:sample/date/ddmmyy"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>

